@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-size:1.1rem">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form style="font-size:1.1rem" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link" style="font-size:1.1rem; color:white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item" style="font-size:1.1rem">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="font-size:1.1rem;color:white;">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="font-size:1.1rem;color:white;">Login</a>
    </li>
}
</ul>
